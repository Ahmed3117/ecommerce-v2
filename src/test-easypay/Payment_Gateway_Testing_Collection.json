				{
					"name": "EasyPay Webhook Simulation",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Calculate EasyPay webhook signature",
									"const amount = pm.collectionVariables.get('webhook_amount') || '180.00';",
									"const customer_phone = pm.collectionVariables.get('customer_phone') || '01030265229';",
									"const secret_key = pm.collectionVariables.get('easypay_secret_key') || 'aa093225-cb06-4b39-b684-1f8533c5e2f6';",
									"",
									"// EasyPay webhook signature pattern: amount + customer_phone + secret_key",
									"const stringToHash = `${amount}${customer_phone}${secret_key}`;",
									"const signature = CryptoJS.SHA256(stringToHash).toString(CryptoJS.enc.Hex);",
									"",
									"pm.collectionVariables.set('webhook_signature', signature);",
									"",
									"console.log('EasyPay Webhook Signature Calculation:');",
									"console.log('Amount:', amount);",
									"console.log('Customer Phone:', customer_phone);",
									"console.log('Secret Key:', secret_key);",
									"console.log('String to Hash:', stringToHash);",
									"console.log('Generated Signature:', signature);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"easy_pay_sequence\": \"{{easypay_invoice_sequence}}\",\n    \"status\": \"PAID\",\n    \"signature\": \"{{webhook_signature}}\",\n    \"customer_phone\": \"{{customer_phone}}\",\n    \"amount\": \"{{webhook_amount}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/webhook/easypay/{{api_key}}/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"webhook",
								"easypay",
								"{{api_key}}",
								""
							]
						}
					},
